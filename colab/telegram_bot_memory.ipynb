      "source": [
        "# 2) Inserir o token do BotFather com segurança\n",
        "from getpass import getpass\n",
        "TOKEN = getpass('Insira o token do seu bot (BotFather): ')\n",
        "assert TOKEN and TOKEN.strip(), 'Token vazio. Obtenha o token com o @BotFather.'\n"
      ]
